#!/bin/sh

exec ltlcross                                                           \
  --timeout=60                                                          \
  -F ${abs_top_srcdir-.}/formulae/random_sd.ltl                         \
  -F ${abs_top_srcdir-.}/formulae/random_nd.ltl                         \
  --reference 'ltl2tgba'                                                \
  --grind grind.ltl                                                     \
  --save-bogus bogus.ltl                                                     \
  'ltl2tgba %f  | seminator --slim >%O'\
  'ltl2tgba %f  | seminator --slim --weak >%O'\
  'ltl2tgba %f  | seminator --slim --strong --via-tgba >%O'\
  'ltl2tgba %f  | seminator --slim --via-tba >%O'\
  'ltl2tgba %f  | seminator --slim --via-tgba >%O'\
  'ltl2tgba %f  | seminator --slim --via-tba --weak >%O'\
  'ltl2tgba %f  | seminator --slim --pure --via-tba >%O'
